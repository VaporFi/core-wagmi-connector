{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "target": "ES6",
    "lib": ["ES6", "dom"],
    "sourceMap": true,
    "allowJs": false,
    "jsx": "react",
    "strictPropertyInitialization": false,
    "declaration": true,
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "noImplicitReturns": true,
    "noImplicitThis": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true
  },
  "include": ["src"],
  "exclude": ["node_modules", "dist"]
}
